# Coverage.py configuration for APEX/SignX
# Integrates with pytest-cov and Codecov uploads

[run]
source =
    apex
    services
    modules
    platform
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */.venv/*
    */archive/*
    */SignX-Studio/*
    */migrations/*
    */alembic/versions/*
branch = True
parallel = True

[report]
# Reporting configuration
precision = 2
show_missing = True
skip_covered = False
skip_empty = True

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about protocol methods
    \.\.\.

[html]
directory = htmlcov

[xml]
output = coverage.xml
