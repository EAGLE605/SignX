{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.yourco.betterbeam",
  "productName": "BetterBeam",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "vite --host 127.0.0.1 --port 5173 --strictPort --clearScreen false",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173/"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; img-src 'self' blob: data:; media-src 'self' blob: data:; connect-src 'self' http: https: ws:; style-src 'self' 'unsafe-inline'; script-src 'self' 'wasm-unsafe-eval'"
    },
    "windows": [{ "label": "main", "title": "BetterBeam", "width": 1280, "height": 800, "resizable": true }],
    "macOSPrivateApi": false,
    "capabilities": [
      "./capabilities/fs.json",
      "./capabilities/dialog.json",
      "./capabilities/shell.json",
      "./capabilities/log.json",
      "./capabilities/window-state.json"
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/icon.ico", "icons/icon.png"],
    "windows": {
      "wix": null,
      "nsis": {
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}

