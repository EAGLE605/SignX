# SignX Production Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# ==========================================
# REQUIRED - Database
# ==========================================
POSTGRES_PASSWORD=<generate-strong-password>
DATABASE_URL=postgresql://apex:${POSTGRES_PASSWORD}@db:5432/apex

# ==========================================
# REQUIRED - Redis
# ==========================================
REDIS_URL=redis://cache:6379/0

# ==========================================
# REQUIRED - Object Storage (MinIO/S3)
# ==========================================
MINIO_ACCESS_KEY=<generate-access-key>
MINIO_SECRET_KEY=<generate-secret-key>
MINIO_ROOT_PASSWORD=<generate-strong-password>
MINIO_URL=http://object:9000
MINIO_BUCKET=signx-uploads

# ==========================================
# REQUIRED - Authentication (Supabase)
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=<your-anon-key>
SUPABASE_SERVICE_KEY=<your-service-role-key>

# ==========================================
# REQUIRED - Security
# ==========================================
JWT_SECRET_KEY=<generate-256-bit-secret>
CORS_ALLOW_ORIGINS=https://your-domain.com,https://app.your-domain.com

# ==========================================
# OPTIONAL - AI Services
# ==========================================
GEMINI_API_KEY=<from-aistudio-google-com>
ANTHROPIC_API_KEY=<from-console-anthropic-com>

# ==========================================
# OPTIONAL - Monitoring
# ==========================================
SENTRY_DSN=<from-sentry-io>
OPENSEARCH_PASSWORD=<generate-strong-password>
GRAFANA_PASSWORD=<generate-strong-password>

# ==========================================
# OPTIONAL - CRM Integration
# ==========================================
KEYEDIN_WEBHOOK_URL=<your-keyedin-webhook>
KEYEDIN_API_KEY=<your-keyedin-api-key>

# ==========================================
# OPTIONAL - Two-Factor Auth (Duo)
# ==========================================
DUO_IKEY=<duo-integration-key>
DUO_SKEY=<duo-secret-key>
DUO_HOST=api-xxxxx.duosecurity.com

# ==========================================
# OPTIONAL - Azure AD (SSO)
# ==========================================
AZURE_TENANT_ID=<your-azure-tenant-id>

# ==========================================
# Build Metadata (set by CI/CD)
# ==========================================
APP_VERSION=0.1.0
GIT_SHA=dev
GIT_DIRTY=false
BUILD_ID=local
ENV=production

# ==========================================
# Rate Limiting
# ==========================================
APEX_RATE_LIMIT_PER_MIN=60

# ==========================================
# Telemetry
# ==========================================
OTEL_EXPORTER=otlp
OTEL_ENDPOINT=http://otel-collector:4317
